@using System.Web.Optimization
@using PhoneBook.Extensions
<!DOCTYPE html>
<html lang="en" @Html.ConditionalManifest()>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Phone Book</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/themes/base/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Phone Book", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Contacts", "Index", "Contacts")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - <a href="http://www.Mehdi-Khalili.com">Mehdi Khalili</a></p>
                </div>
                <div class="float-right">
                    <ul id="social">
                        <li><a href="http://twitter.com/MehdiKhalili" class="twitter">Twitter</a></li>
                    </ul>
                </div>
            </div>
        </footer>
        <script type="text/javascript">
            App = {};
        </script>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/offline")
    </body>
</html>
